<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Calendar.AddEventPopup">
    <VerticalStackLayout Padding="10" Spacing="10" WidthRequest="500">
        <Label Text="Add Event" FontSize="25" FontAttributes="Bold"/>
        <Entry x:Name="NameEntry" Placeholder="Event Name"/>
        <Editor x:Name="DescriptionEntry" Placeholder="Event Description"/>
        <DatePicker x:Name="DatePicker"/>
        <Button Text="Save" Command="{Binding SaveEventCommand}" />
    </VerticalStackLayout>
</toolkit:Popup>